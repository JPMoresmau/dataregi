<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8"/>
    <title>DataRegi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link rel="stylesheet" href="/static/styles.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cirrus-ui@0.6.0/dist/cirrus.min.css"/>    

    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
    <link rel="manifest" href="/icons/site.webmanifest">
</head>
<body>

    <div class="header header-fixed unselectable header-animated">
        <div class="header-brand">
            <div class="nav-item no-hover">
                <a href="/"><h6 class="title">DataRegi</h6></a>
            </div>
        </div>
    </div>

    <div class="hero fullscreen">
        <div class="hero-body u-center">
            <div class="w-90" style="position: relative">
                <div class="row">
                    <div class="col-12" style="padding: 2rem;">
                        <h1>Manage all the spreadsheets floating around your organization!</h1>
                    </div>
                    <div class="col-3">
                    </div>
                    {% if error %}
                        <div class="col-6 text-danger">
                            {{ error }}
                        </div>
                        <div class="col-3">
                        </div>
                        <div class="col-3">
                        </div>
                    {% endif %}
                    <div class="col-6 form-group">
                        <input id="email" type="text" placeholder="Enter your email address." />
                        <button class="form-group-btn btn-link" onclick="login()">
                            Login
                        </button>
                    </div>
                    <div class="col-3">
                    </div>
                    <div class="col-3">
                    </div>
                    <div class="col-6"></div>
                    <div class="toast toast--success" id="toast" style="visibility:hidden">
                        <button class="btn-close" onclick="document.querySelector('#toast').style.visibility='hidden'"></button>
                        <h4 class="toast__title" id="message"></h4>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

    <script>
        async function login(){
            const email=document.querySelector("#email").value;
            console.log("email",email);
            if (email){
                const response = await fetch("/loginEmail", {
                    method: 'POST', 
                    cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
                    headers: {
                    'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({"address":email})
                });
                response.json().then(data=>{

                    document.querySelector("#message").innerHTML=data;
                    document.querySelector("#toast").style.visibility='visible';
                });
            }
        }

    </script>
</body>
</html>
